<body>
	<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: black; z-index: 1; ">
		<a style="font-size: 2em " class=" navbar-brand" href="/">
			<img src="https://res.cloudinary.com/du7tc1ufz/image/upload/v1595879395/icons8-two-hearts-48_nlgynt.png"
				width="42" height="42" class="d-inline-block align-top navImg" alt="">
			<span id="myBrand">Tango</span>
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
			aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">

			<ul class="navbar-nav ml-auto">
				<a href="/login" class=" nav-link active mr-3" style="color: white;"><i class="fas fa-sign-in-alt mr-2"
						aria-hidden="true"></i> Login</a>
				<a href="/register" class=" nav-link active mr-3" style="color: white;"><i class="fas fa-user-plus mr-2"
						aria-hidden="true"></i> Register</a>
			</ul>
		</div>
	</nav>
	<% if(error && error.length>0){ %>
	<div class="alert alert-danger" role="alert">
		<%= error %>
	</div>
	<% } %>
	<% if(success && success.length>0){ %>
	<div class="alert alert-success" role="alert">
		<%= success %>
	</div>
	<% } %>
	<div class="container-fluid rclass">
		<form action="/reset/" method="POST">
			<div id="myCard" class="card text-center">
				<div class="card-body">
					<div class="card-text">
						<h5 class="card-title">Reset Password</h5>
						<div class="form-group">
							<!-- <label for="password">New Password</label> -->
							<span class="pas"> <i class="fa fa-key" aria-hidden="true"></i>
							<input type="password" minlength="8" name="password" value="" id="password-field1" placeholder="New password"
								autofocus="autofocus" class="form-control" />
								<span
									toggle="#password-field1"
									class="fa fa-fw fa-eye field-icon"
									id="toggle-password1"
								></span>
								<span type="button" data-toggle="tooltip" data-placement="right" title="Password must contain atleast 8 characters">
									<i class="fa fa-info-circle"></i>
								</span>
							</span>	
							</div>
						<div class="form-group" >
							<!-- <label for="confirm">Confirm Password</label> -->
							<span class="pas"> <i class="fa fa-key" aria-hidden="true"></i>
							<input type="password" minlength="8" name="confirm" value="" id="password-field2"  placeholder="Confirm password"
							 class="form-control" />
							 <span
							 toggle="#password-field2"
							 class="fa fa-fw fa-eye field-icon"
							 id="toggle-password2"
						   ></span>
						   <span type="button" data-toggle="tooltip" data-placement="right" title="Password must contain atleast 8 characters">
							 <i class="fa fa-info-circle"></i>
						 </span> 
							</span>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">Update Password</button>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>


